
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css' integrity='sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm' crossorigin='anonymous')
        link(rel='stylesheet' href="/style.css")

        title Flash Cards App
    .jumbotron.jumbotron-fluid
      h1 Trivia Flash Card
    .container
      div(class="flip-card")
       div(class="flip-card-inner")
        div(class="flip-card-front")
            div#question
                h3.question(name="question") 
   
            br
        
            #hint
            h3.hint(name="hint") 
            br
            button#hintButton Hint
            button#answerButton Answer
            button#new  Next❔❔
              
        div(class="flip-card-back")
            
                #answer
                    h3.answer(name="answer")
                    br
                    button#backButton Go Back ↩️ 
                    button#triviaB Add ❔Trivia❓ 
        
        
    .modal
        .modal-content
            form(action="/addcard", method="POST",)
                input.mquest(type="text", name="question")
                input.mhint(type="text", name="hint")
                input.manswer(type="text", name="answer")
                button.qaButton(type="submit") Submit
            button.returnB(type="submit") Return
            button.updateM(type="submit") Update 
            button.deleteM(type="submit") Delete
        
    .modal2
        .modal-content
            form(action="/update"  , method="PUT",)
                input.id(type="text", name="id", placeholder="ID") 
                input.questDb(type="text", name="question", placeholder="Question") 
                input.hintDb(type="text", name="hint", placeholder="Hint") 
                input.answerDb(type="text", name="answer", placeholder="Answer") 
                button.updateMe(type="submit") Update
            button.returnB(type="submit") Return

    .modal3
        .modal-content
            form(action="/delete", method="DELETE",)
                p#id Enter card ID to delete that card or delete to remove the current card. 
                input.id(type="text", name="id", placeholder="ID")
                button.deleteMe(type="submit") Delete
            button.returnB(type="submit") Return
               

